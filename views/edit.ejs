<%- include('partials/header', {title: "Edit Company", header: "Edit Company Info"}); %>

<div class="container">
	<form method="post" action="/companies/update/<%=company._id%>">
		<div class="form-group row">
			<div class="col-md-3 col-md-offset-3">
				<input type="text" class="form-control" name="name" placeholder="Company Name" value="<%=company.name%>" autofocus>
			</div>
			<div class="col-md-3">
				<input type="text" name="address" value="<%=company.address%>"" class="form-control" placeholder="Company Address">
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-md-offset-3">
				<select id="sel" class="form-control" name="municipality">
					<option selected><%=company.municipality%></option>
				</select>
			</div>
			<div class="col-md-3">
				<input type="email" name="email" class="form-control" placeholder="Email Address" value="<%=company.email%>">
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-md-offset-3">
				<input type="password" class="form-control" name="password" placeholder="Password" value="<%=company.password%>">
			</div>
			<div class="col-md-3">
				<input type="url" name="website" class="form-control" placeholder="Website" value="<%=company.website%>">
			</div>
		</div>
		<div class="form-group row">
			<div class="col-md-3 col-md-offset-3">
				<input type="number" class="form-control" name="number" min="0" placeholder="Business registration nr." value="<%=company.number%>">
			</div>
			<div class="col-md-3">
				<input type="text" name="description" class="form-control" placeholder="Business Description" value="<%=company.description%>">
			</div>
		</div>
		<div class="form-group row button-group">
			<div class="col-md-3 col-md-offset-3">
				<button type="submit" class="btn btn-success">SUBMIT</button>
			</div>
			<div class="col-md-3">
				<button type="reset" class="btn btn-default">RESET</button>

			</div>
		</div>
	</form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
<script type="text/javascript">
	var municipalities = ["Albanik", "Artanë", "Burim", "Dardanë", "Deçan", "Drenas", "Ferizaj", "Fushë Kosovë", "Gjakovë", "Gjilan", "Kastriot", "Kaçanik", "Klinë", "Lipjan", "Malishevë", "Mitrovicë", "Pejë", "Podujevë", "Prishtinë", "Prizren", "Rahovec", "Sharr", "Shtime", "Shtërpcë", "Skënderaj", "Therandë", "Viti", "Vushtrri", "Zubin Potok", "Zveçan"];
	municipalities.forEach(function(m) {
		if(m !== "<%=company.municipality%>")
			$('select').append("<option>" + m + "</option>");
	});

</script>

<% include partials/footer %>